            <column name="tax_landlord_name" type="varchar(120)">
                <constraints nullable="true" />
            </column>
            <column name="tax_cpf" type="varchar(20)">
                <constraints nullable="true" />
            </column>
            <column name="tax_email" type="varchar(254)">
                <constraints nullable="true" />
