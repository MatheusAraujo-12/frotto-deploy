            <column name="tax_phone" type="varchar(20)">
                <constraints nullable="true" />
            </column>
            <column name="tax_company_name" type="varchar(160)">
                <constraints nullable="true" />
            </column>
            <column name="tax_cnpj" type="varchar(20)">
                <constraints nullable="true" />
            </column>
            <column name="tax_ie" type="varchar(40)">
                <constraints nullable="true" />
            </column>
            <column name="tax_contact_phone" type="varchar(20)">
                <constraints nullable="true" />
            </column>
            <column name="tax_address" type="varchar(500)">
                <constraints nullable="true" />
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
